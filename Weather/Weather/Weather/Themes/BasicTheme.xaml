<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Weather.Themes.BasicTheme">
    <Color x:Key="PageBackgroundColor">WhiteSmoke</Color>
    <Color x:Key="NavigationBarColor">WhiteSmoke</Color>
    <Color x:Key="Primary">WhiteSmoke</Color>
    <Color x:Key="PrimaryDark">Black</Color>
    <Color x:Key="SecondaryColor">Black</Color>
    <Color x:Key="PrimaryTextColor">Black</Color>
    <Color x:Key="SecondaryTextColor">White</Color>
    <Color x:Key="TertiaryTextColor">Gray</Color>
    <Color x:Key="TransparentColor">Transparent</Color>
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="WhiteSmoke" />
        <Setter Property="BarTextColor" Value="Black" />
    </Style>
</ResourceDictionary>